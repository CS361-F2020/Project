<h3 class="pb-3">{{title}}</h3>

 
<a href="/search/pointsFAQ" class = "btn btn-info" role = "button">Learn more about the point system</a>
<div class="card-columns"></div>
        <br>
        <div class="row row-cols-2">
            {{#each books}}
                <div class="col-6 col-sm-4 col-md-3 col-lg-2 col-xl-2" id="{{id}}">
                    <div class="card h-100 cards">
                        <img src="{{imgUrl}}" class="card-img-top cover-art">
                        <button type="button" class="btn btn-primary btn-details" onclick = "bookDetails({{isbn}}, {{pointcost}})">View Details</button>
                        <button type="button" class="btn btn-success btn-request" onclick="requestBook({{id}}, {{pointcost}}, '{{title}}', {{userPoints}})">Request A Copy</button>
                        {{!-- <div class="card-body"> --}}
                            <p class="card-text">{{title}}</p>
                            <p class = "card-text">{{author}}</p>
                            {{!-- <p class = "card-text">{{pointcost}}</p>  --}}
                        {{!-- </div> --}}
                    </div>
                </div>
        
            {{/each}}
        </div>
</div>

<!-- Modal -->
<div class="modal fade" id="pageModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Request a Book</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalBody">
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmButton" onclick="">Confirm</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Book Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalBody">
                <p id = "details"></p>
                {{isbn}}
            </div>
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>


<script src="/client/search.js"></script>