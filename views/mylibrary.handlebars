<h1>This is the My Library page</h1><br><br>


<div class="shelf">
    <span class="shelf-title">Books Available to Swap</span>
    <button class="library-toggle" type="button" data-toggle="collapse" data-target="#collapsSwapShelf"
        aria-expanded="true" aria-controls="collapsSwapShelf">
        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-chevron-down" fill="currentColor"
            xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd"
                d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z" />
        </svg>
    </button>
</div>
<div class="collapse show" id="collapsSwapShelf">
    <br>
    <div class="row row-cols-2">
        {{#each library}}
        {{#if swap}}
        <div class="col-6 col-sm-4 col-md-3 col-lg-2 col-xl-2" id="{{userBookId}}">
            <div class="card h-100 cards">
                <img src="{{imgUrl}}" class="card-img-top" alt="...">
                <button type="button" class="btn btn-outline-light delete-btn" data-toggle="modal"
                    data-target="#deleteModal-{{userBookId}}">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-x-square" fill="currentColor"
                        xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                            d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                        <path fill-rule="evenodd"
                            d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                    </svg>
                </button>

                <!-- Modal -->
                <div class="modal fade" id="deleteModal-{{userBookId}}" tabindex="-1"
                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Confirm Book Removal</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to remove <b>"{{title}}"</b> from your library?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-primary" data-dismiss="modal"
                                    onclick="remove({{userBookId}})">Confirm</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <p class="card-text">{{title}}</p>
                </div>
            </div>
        </div>
        {{/if}}
        {{/each}}
    </div>
    <br><br>
</div>

