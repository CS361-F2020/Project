<div class="col-6 pb-3">
    <h3>{{title}}</h3>
</div>

<div>
    <ul class="nav nav-tabs" role="tablist" id="swapTabs">
        <li class="nav-item active">
            <a class="nav-link active" href="#tab-table1" data-toggle="tab">Outgoing - Active ({{outgoingCount}})</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#tab-table2" data-toggle="tab">Incoming - Active ({{incomingCount}})</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#tab-table3" data-toggle="tab">History ({{historyCount}})</a>
        </li>
    </ul>
    <div class="tab-content pt-4">
        <div class="tab-pane active" id="tab-table1">
            <table id="myTable1" class="table table-swap table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Requestor</th>
                        <th>Book</th>
                        <th>Requested</th>
                        <th>Modified</th>
                        <th>Status</th>
                        <th class="no-sort">Quick Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each outgoing}}
                    <td>{{id}}</td>
                    <td><a href="mailto:{{email}}"><i class="fas fa-envelope pr-2 text-secondary"></i></a>{{firstName}}
                        {{lastName}}</td>
                    <td>{{title}} - {{author}}</td>
                    <td>{{created}}</td>
                    <td>{{modified}}</td>
                    <td>{{status}}</td>

                    {{#ifEquals statusId "1"}}
                    <td class="text-left pl-4">
                        <i class="far fa-check-circle fa-lg pr-2 text-success btn" title="Accept this swap"
                            onclick="javascript:updateStatus({{id}}, 2, '{{title}}')"></i>
                        <i class="far fa-times-circle fa-lg pr-2 text-danger btn" title="Reject this swap"
                            onclick="javascript:updateStatus({{id}}, 5, '{{title}}')"></i>
                    </td>
                    {{/ifEquals}}

                    {{#ifEquals statusId "2"}}
                    <td class="text-left pl-4">
                        <i class="fas fa-shipping-fast fa-lg pr-1 text-info btn" title="Mark as Shipped"
                            onclick="javascript:updateStatus({{id}}, 3, '{{title}}')"></i>
                        <i class="far fa-times-circle fa-lg pr-2 text-danger btn" title="Reject this swap"
                            onclick="javacript:updateStatus({{id}}, 5, '{{title}}')"></i>
                    </td>
                    {{/ifEquals}}

                    {{#ifEquals statusId "3"}}
                    <td class="text-left pl-4">
                        <i class="fas fa-exclamation-triangle fa-lg pr-2 text-warning btn" title="Mark as Lost"
                            onclick="javacript:updateStatus({{id}}, 7, '{{title}}')"></i>
                        <i class="far fa-times-circle fa-lg pr-2 text-danger btn" title="Reject this swap"
                            onclick="javacript:updateStatus({{id}}, 5, '{{title}}')"></i>
                    </td>
                    {{/ifEquals}}

                    {{#ifEquals statusId "4"}}
                    <td class="text-left pl-4">
                        <a class="btn btn-outline-success btn-small small" title="Complete this swap"
                            onclick="javascript:closeSwap({{id}}, {{statusId}}, '{{title}}', {{pointCost}}">Close</a>
                    </td>
                    {{/ifEquals}}

                    {{#ifEquals statusId "5"}}
                    <td class="text-left pl-4">
                        <i class="fas fa-user-clock fa-lg pr-2 text-info"
                            title="We are waiting for the requestor to close this swap."></i>
                    </td>
                    {{/ifEquals}}

                    {{#ifEquals statusId "6"}}
                    <td class="text-left pl-4">
                        <a class="btn btn-outline-success btn-small small" title="Complete this swap"
                            onclick="javascript:closeSwap({{id}}, {{statusId}}, '{{title}}', {{pointCost}}">Close</a>
                    </td>
                    {{/ifEquals}}

                    {{#ifEquals statusId "7"}}
                    <td class="text-left pl-4">
                        <a class="btn btn-outline-success btn-small small" title="Complete this swap"
                            onclick="javascript:closeSwap({{id}}, {{statusId}}, '{{title}}', {{pointCost}}">Close</a>
                    </td>
                    {{/ifEquals}}

                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="tab-pane" id="tab-table2">
            <table id="myTable2" class="table table-swap table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Seller</th>
                        <th>Book</th>
                        <th>Requested</th>
                        <th>Modified</th>
                        <th>Status</th>
                        <th class="no-sort">Quick Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each incoming}}
                    <td>{{id}}</td>
                    <td><a href="mailto:{{email}}"><i class="fas fa-envelope pr-2 text-secondary"></i></a>{{firstName}}
                        {{lastName}}</td>
                    <td>{{title}} - {{author}}</td>
                    <td>{{created}}</td>
                    <td>{{modified}}</td>
                    <td>{{status}}</td>

                    {{#ifEquals statusId "1"}}
                    <td class="text-left">
                        <i class="far fa-times-circle fa-lg pr-2 text-danger btn" title="Cancel this request"
                            onclick="javacript:updateStatus({{id}}, 6, '{{title}}')"></i>
                    </td>
                    {{/ifEquals}}

                    {{#ifEquals statusId "2"}}
                    <td class="text-left">
                        <i class="far fa-times-circle fa-lg pr-2 text-danger" title="Cancel this request"
                            onclick="javacript:updateStatus({{id}}, 6, '{{title}}')"></i>
                    </td>
                    {{/ifEquals}}

                    {{#ifEquals statusId "3"}}
                    <td class="text-left">
                        <i class="fas fa-exclamation-triangle fa-lg pr-2 text-warning" title="Mark as Lost"
                            onclick="javacript:updateStatus({{id}}, 7, '{{title}}')"></i>
                        <a class="survey_modal" data-toggle="modal" data-id="6" href="#surveyModal"><i
                                class="far fa-check-circle fa-lg pr-2 text-success" title="Mark as Received"></i></a>
                    </td>
                    {{/ifEquals}}

                    {{#ifEquals statusId "4"}}
                    <td class="text-left pl-4">
                        <i class="fas fa-user-clock fa-lg pr-2 text-info"
                            title="We are waiting for the seller to close this swap."></i>
                    </td>
                    {{/ifEquals}}

                    {{#ifEquals statusId "5"}}
                    <td class="text-left pl-4">
                        <a class="btn btn-outline-success btn-small small" title="Complete this swap"
                            onclick="javascript:closeSwap({{id}}, {{statusId}} '{{title}}', {{pointCost}}">Close</a>
                    </td>
                    {{/ifEquals}}

                    {{#ifEquals statusId "6"}}
                    <td class="text-left pl-4">
                        <i class="fas fa-user-clock fa-lg pr-2 text-info"
                            title="We are waiting for the seller to close this swap."></i>
                    </td>
                    {{/ifEquals}}

                    {{#ifEquals statusId "7"}}
                    <td class="text-left pl-4">
                        <i class="fas fa-user-clock fa-lg pr-2 text-info"
                            title="We are waiting for the seller to close this swap."></i>
                    </td>
                    {{/ifEquals}}

                    {{/each}}
            </table>
        </div>
        <div class="tab-pane" id="tab-table3">
            <table id="myTable3" class="table table-swap table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Type</th>
                        <th>Book</th>
                        <th>Requested</th>
                        <th>Modified</th>
                        <th>Status</th>
                        <th>Points</th>
                        <th class="no-sort">Quick Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each history}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{type}}</td>
                        <td>{{title}} - {{author}}</td>
                        <td>{{created}}</td>
                        <td>{{modified}}</td>
                        <td>{{status}}</td>

                        {{#ifEquals type "Incoming"}}
                        <td class="text-danger text-center font-weight-bold">-{{points}}</td>
                        {{/ifEquals}}

                        {{#ifEquals type "Outgoing"}}
                        <td class="text-success text-center font-weight-bold">{{points}}</td>
                        {{/ifEquals}}

                        <td class="text-left pl-4">
                            <i class="far fa-user fa-lg pr-2 text-dark"
                                title="View {{firstName}} {{lastName}}'s Profile"></i>
                            <i class="far fa-file-alt fa-lg pr-2 text-info btn" title="View Swap Details"
                                onclick="javascript:viewHistory({{id}})"></i>
                        </td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="surveyModal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-body">
                <form id="surveyForm">
                    <input type="hidden" id="id" value="" />
                    <div class="form-group col-12 text-center">
                        <div><label class="font-weight-bold">Did you receieve your book within 10 days of your
                                request?</label></div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="rcvdOnTime" id="rcvdOnTime1" value="1"
                                required>
                            <label class="form-check-label" for="rcvdOnTime1">Yes</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="rcvdOnTime" id="rcvdOnTime0" value="0"
                                required>
                            <label class="form-check-label" for="rcvdOnTime0">No</label>
                        </div>
                    </div>
                    <div class="form-group col-12 text-center">
                        <div><label class="font-weight-bold">Did you receieve your book in the condition listed by the
                                seller?</label></div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="conditionMatched" id="conditionMatched1"
                                value="1" required>
                            <label class="form-check-label" for="conditionMatched1">Yes</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="conditionMatched" id="conditionMatched0"
                                value="0" required>
                            <label class="form-check-label" for="conditionMatched0">No</label>
                        </div>
                    </div>
                    <div class="form-group col-12 text-center">
                        <div><label for="star" class="font-weight-bold">How would you rate this transaction?</label>
                        </div>
                        <div class="stars">
                            <input id="star-5" type="radio" name="star" value="5" required />
                            <label for="star-5"></label>
                            <input id="star-4" type="radio" name="star" value="4" required />
                            <label for="star-4"></label>
                            <input id="star-3" type="radio" name="star" value="3" required />
                            <label for="star-3"></label>
                            <input id="star-2" type="radio" name="star" value="2" required />
                            <label for="star-2"></label>
                            <input id="star-1" type="radio" name="star" value="1" required />
                            <label for="star-1"></label>
                        </div>
                    </div>

                    <div class="form-row pl-1 text-center">
                        <button type="button" class="btn btn-secondary btn-sm col-5 mr-1"
                            data-dismiss="modal">Cancel</button>
                        <a type="submit" class="btn btn-primary btn-sm col-6"
                            onclick="javascript:submitSurvey()">Complete Survey</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="historyModal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Swap Status History</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table id="historyTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Status</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="/client/swaps.js"></script>